<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">


    <Button
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_registration_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="57dp"/>
    <Button
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/register_registration_button"
            android:layout_above="@+id/cancel_registration_button"
            android:layout_alignParentStart="true"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/register_registration_button"
        android:layout_alignParentStart="true" />

    <EditText
            android:hint="Username"
            android:textColorHint="@android:color/holo_blue_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username_registration_EditText"
        android:layout_marginTop="23dp"
        android:textSize="18dp"
        android:layout_below="@+id/name_registration_EditText"
        android:layout_alignParentStart="true" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/holo_blue_light"
            android:id="@+id/password_registration_EditText"
            android:hint="Password"
        android:textSize="18dp"
        android:layout_below="@+id/username_registration_EditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:text=" Account Type"
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="25dp"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Name"
        android:textColorHint="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_registration_EditText"
        android:layout_marginTop="61dp"
        android:textSize="18dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>