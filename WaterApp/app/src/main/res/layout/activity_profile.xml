<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <EditText
        android:hint="Name"
        android:textColorHint="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_profile_EditText"
        android:layout_marginTop="61dp"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/save_changes_button"
        android:layout_above="@+id/cancel_profile_button"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="Delete my account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/del_my_account_button"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cancel_profile_button"
        android:layout_above="@+id/del_my_account_button"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Username"
        android:textColorHint="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile"
        android:layout_marginTop="23dp"
        android:textSize="18dp"
        android:layout_below="@+id/name_profile_EditText"
        android:layout_alignParentStart="true" />/>

    <Spinner

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/save_changes_button"
        android:layout_alignParentStart="true"

        />

    <TextView

        android:text=" Account Type"
        android:textColor="@android:color/holo_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="25dp"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/spinner2"
        android:layout_alignParentStart="true"
        />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/holo_blue_light"
        android:id="@+id/password_profile_EditText"
        android:hint="Password"
        android:textSize="18dp"
        android:layout_above="@+id/textView2"
        android:layout_below="@+id/name_profile_EditText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />
</RelativeLayout>